<h1>All our tasks</h1>

<%= link_to "Create a new one", new_task_path %>

<% @tasks.each do |t| %>
  <h2> <%= t.name %> </h2>
  <p> <%= t.description %> </p>
  <p> <%= t.status %> </p>
  <%= link_to "More Details", task_path(t) %>
  <%= link_to "Remove Task", task_path(t), method: :delete %>
<% end %>
